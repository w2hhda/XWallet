<?xml version="1.0" encoding="utf-8"?>
<com.x.wallet.ui.view.AddressListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingEnd="@dimen/account_list_item_paddingEnd"
    android:paddingStart="@dimen/account_list_item_paddingEnd">

    <TextView
        android:id="@+id/address_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/gray_23"
        android:textSize="12sp"
        android:paddingTop="10dp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/address_type"
        android:textSize="12sp"
        android:textColor="@color/address_title_textColor"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/address_detail_tv"
        android:paddingTop="2dp"
        android:paddingBottom="10dp"
        android:textSize="12sp"
        android:textColor="@color/address_title_textColor"
        android:layout_below="@id/address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.x.wallet.ui.view.AddressListItem>