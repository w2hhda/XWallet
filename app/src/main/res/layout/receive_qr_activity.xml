<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/address_qr_img"
            android:layout_width="@dimen/qr_bitmap_wh"
            android:layout_height="@dimen/qr_bitmap_wh" />

        <TextView
            android:id="@+id/receive_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textSize="13sp" />

        <Button
            android:id="@+id/copy_address_btn"
            style="@style/CreateAccountBtnTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/create_account_btn_bg_selector"
            android:text="@string/copy_address" />
    </LinearLayout>
</FrameLayout>