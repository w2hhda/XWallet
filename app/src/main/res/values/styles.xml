<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomeOverflowBtnStyle</item>
        <item name="actionOverflowMenuStyle">@style/CustomeOverflowMenuStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="toolbarStyle">@style/NoSpaceActionBarTheme</item>
    </style>

    <style name="NoSpaceActionBarTheme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="CustomeOverflowBtnStyle" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/add_account_menu_icon</item>
    </style>

    <style name="CustomeOverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AllBalanceTextStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AllBalanceUnitTextStyle" parent="AllBalanceTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NotBackupWarnTextStyle">
        <item name="android:textColor">#5fc7c6</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="AccountListItemCoinNameTextStyle">
        <item name="android:textColor">@color/account_list_item_main_textcolor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AccountListItemBalanceTextStyle">
        <item name="android:textColor">@color/account_list_item_main_textcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountListItemBalanceConversionTextStyle">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AddAccountBtnTextStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SettingItemTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CreateAccountInputTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#999999</item>
    </style>

    <style name="CreateAccountTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CreateAccountLinkTextStyle" parent="CreateAccountTextStyle">
        <item name="android:textColor">#232342</item>
    </style>

    <style name="CreateAccountBtnTextStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="TransactionListItemTimestampTextStyle">
        <item name="android:textColor">#b2b2b2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TransactionListItemUnitTextStyle">
        <item name="android:textColor">#232342</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemNameStyle">
        <item name="android:paddingStart">21dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:textColor">#b2b2b2</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ItemDetailStyle">
        <item name="android:paddingStart">21dp</item>
        <item name="android:paddingEnd">21dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
